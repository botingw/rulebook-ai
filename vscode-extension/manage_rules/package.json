{
  "name": "ai-coding-ide-rule-manager",
  "displayName": "Manage AI coding Rules",
  "description": "One-click installer + syncer for AI-coding rule sets (Cursor, Copilot, CLINE, Windsurf, Roo)â€¦ all from VS Code.",
  "publisher": "BotingWang",
  "repository": {
    "type": "git",
    "url": "https://github.com/botingw/rulebook-ai.git"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:manageRulesView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "manageRules.installRuleSet",
        "title": "Install Rule Set",
        "category": "Manage Rules"
      },
      {
        "command": "manageRules.syncRuleSet",
        "title": "Sync Rule Set",
        "category": "Manage Rules"
      },
      {
        "command": "manageRules.cleanRules",
        "title": "Clean Rules",
        "category": "Manage Rules"
      },
      {
        "command": "manageRules.cleanAll",
        "title": "Clean All",
        "category": "Manage Rules"
      },
      {
        "command": "manageRules.listRules",
        "title": "List Available Rule Sets",
        "category": "Manage Rules"
      },
      {
        "command": "manageRules.runCustomCli",
        "title": "Run Custom CLI...",
        "category": "Manage Rules"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "manage-rules-activitybar",
          "title": "Manage Rules",
          "icon": "my_prod_icon.svg" 
        }
      ]
    },
    "views": {
      "manage-rules-activitybar": [
        {
          "id": "manageRulesView",
          "name": "Manage Rules",
          "type": "tree"
        }
      ]
    },
    "configuration": {
      "title": "Manage Rules",
      "properties": {
        "manageRules.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to the Python executable (e.g., python, python3, /usr/bin/python3). Used to run manage_rules.py."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
